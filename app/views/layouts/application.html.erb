<!DOCTYPE html>
<html>
  <head>
    <title>Crispy</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %> mt-3 mb-4"><%= message %></div>
      <% end %>
      <%= yield %>
      <div class="card">
        <%= debug(params) if Rails.env.development? %>
      </div>
    </div>
  </body>
</html>
