<div class="row">
  <div class="col-10 offset-1">
    <div class="jumbotron">
      <div class="text-center">
        <h2 class="display-4">Sign Up</h2>
        <p class="lead">Start keeping tabs on your pantry</p>
      </div>
      <hr>

      <%= form_for(:user) do |f| %>
        <div class="form-group row">
          <div class="col-10 offset-1">
            <%= f.label :email, class: "col-form-label" %>
            <%= f.email_field :email, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-10 offset-1 mb-3">
            <%= f.label :password, class: "col-form-label" %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          <div class="col-10 offset-1">
            <%= f.label :password_confirmation, class: "col-form-label text-capitalize" %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :name, class: "col-12 offset-1 col-form-label" %>
          <div class="col-5 offset-1">
            <%= f.text_field :first_name, class: 'form-control', placeholder: 'First' %>
          </div>
          <div class="col-5">
            <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last' %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-6 offset-3 text-center py-3">
            <button class="btn btn-primary form-control" type="submit"><strong>Get Started</strong></button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
